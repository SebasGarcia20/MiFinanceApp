generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  // Finance-related relations
  categories           Category[]
  fixedPayments        FixedPayment[]
  bucketConfigs        BucketConfig[]
  expenses             Expense[]
  bucketPayments       BucketPayment[]
  monthData            MonthData[]
  savingsGoals         SavingsGoal[]
  savingsContributions SavingsContribution[]
  settings             UserSettings?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Finance-related models - all include userId for multi-user support

model Category {
  id        String   @id @default(cuid())
  userId    String? // null for global defaults
  name      String
  color     String? // Hex color code (optional)
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  expenses      Expense[]
  fixedPayments FixedPayment[]

  @@index([userId])
}

model FixedPayment {
  id         String   @id @default(cuid())
  userId     String
  name       String
  amount     Int // stored as integer (cents)
  dueDate    String? // YYYY-MM-DD format
  categoryId String? // Optional category
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([userId])
}

model BucketConfig {
  id         String   @id @default(cuid())
  userId     String
  name       String
  type       String // 'cash' | 'credit_card'
  paymentDay Int? // Day of month (1-31) for credit cards, null for cash
  order      Int // Display order
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Expense {
  id         String   @id @default(cuid())
  userId     String
  period     String // Period format: YYYY-MM-DD (start date of period)
  name       String
  amount     Int // stored as integer (cents)
  bucketId   String // References BucketConfig.id
  categoryId String // Required category, defaults to "Other"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  @@index([userId, period])
  @@index([categoryId])
}

model BucketPayment {
  id        String   @id @default(cuid())
  userId    String
  period    String // Period format: YYYY-MM-DD (start date of period)
  bucketId  String // References BucketConfig.id
  amount    Int // stored as integer (cents)
  paid      Boolean  @default(false)
  dueDate   String? // YYYY-MM-DD format
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, period])
}

model MonthData {
  id                  String   @id @default(cuid())
  userId              String
  period              String // Period format: YYYY-MM-DD (start date of period)
  salary              Int      @default(0) // stored as integer (cents)
  monthlyLimit        Int      @default(0) // stored as integer (cents)
  paidFixedPaymentIds String[] // Array of FixedPayment IDs paid this month
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, period])
  @@index([userId])
}

model SavingsGoal {
  id            String   @id @default(cuid())
  userId        String
  name          String
  targetAmount  Int // stored as integer (cents)
  monthlyTarget Int? // stored as integer (cents), optional
  order         Int // Display order
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SavingsContribution {
  id        String   @id @default(cuid())
  userId    String
  goalId    String // References SavingsGoal.id
  amount    Int // stored as integer (cents)
  date      String // YYYY-MM-DD format
  period    String // Period format: YYYY-MM-DD (start date of period)
  source    String // 'manual' | 'recurring'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, goalId])
  @@index([userId, period])
}

model UserSettings {
  id             String   @id @default(cuid())
  userId         String   @unique
  periodStartDay Int      @default(1) // Day of month (1-31)
  language       String   @default("es") // Language code: "es" for Spanish, "en" for English
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
